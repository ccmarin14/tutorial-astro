---
import BaseLayout from '../../layouts/BaseLayout.astro';
const pageTitle = "√çndice de etiquetas";
const allPosts: Record<string, any>[] = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout pageTitle={pageTitle}>
    <div class="tags">
        {tags.map((tag) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)
        )}
    </div>
</BaseLayout>
<style>
    a {
        padding: 0 1em;
        color: #00539F;
        text-decoration: none;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        background-color: #F8FCFD;
        font-size: 1.15em;
    }

    .tag:hover {
        background-color: #4c1d95;
    }

    .tag:hover > a {
        color: #f8f8f8;
    }
</style>